<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_trip_title_text_view"
        android:textStyle="bold"
        android:padding="4dp"
        tools:text="Trip title"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_trip_date_text_view"
        android:layout_below="@id/list_item_trip_title_text_view"
        android:padding="4dp"
        android:layout_marginTop="3dp"
        tools:text="Trip date"/>

    <TextView
        android:id="@+id/list_item_trip_dest_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_marginTop="50dp"
        tools:text="Trip Comment"/>

</RelativeLayout>